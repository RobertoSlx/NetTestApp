<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTest03.Views.Preferences.UserProfilePage"
			 xmlns:vm="clr-namespace:AppTest03.ViewModels"
			 xmlns:model="clr-namespace:AppTest03.Models">

	<ContentPage.BindingContext>
		<vm:UserProflePage_VM />
	</ContentPage.BindingContext>

	<ContentPage.Content>
		<ScrollView HeightRequest="6000">
			<StackLayout>
				<Editor Text="{Binding Mensaje}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>